class Controler extends EventTarget {
    constructor(){
        super();
    }

     user(user){
        this.dispatchEvent(
            new CustomEvent(
                "currentUser",
                {detail: {user: user}}
                )
        );
    } 
    ocjena(ocjena, username,id){
        this.dispatchEvent(
            new CustomEvent(
                "ocjenjenOglas",
                {detail: {user=ocjena, username, id]}}
                )
        );
    }

    addOglas(event){
        this.dispatchEvent(
            new CustomEvent(
                "newOglas",
                {detail: {oglas: event}}
                )
        );

    }
}
let controler=new Controler
module.exports = controler;